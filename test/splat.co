fn = (first, ...rest) -> '' + rest
eq fn(1 to 5), '2,3,4,5'
eq fn(6 to 7), '7'

fn = (...heads, last) -> '' + heads
eq fn(1 to 5), '1,2,3,4'
eq fn(6 to 7), '6'

fn = (first, second, ...middles, last) -> '' + middles
eq fn(1 to 5), '3,4'
eq fn(6 to 7), ''


obj =
  name: 'moe'
  accessor: (...args) ->
    '' + [@name].concat args
  getNames: ->
    args = ['jane', 'ted']
    @accessor ...args
  index: 0
  0: {method: -> this is obj[0]}

eq obj.getNames(), 'moe,jane,ted'
ok obj[obj.index++].method(...[0]), 'should cache base value'


