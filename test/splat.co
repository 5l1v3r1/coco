# Multiple splats in the same chain.
o =
  f: -> @a.push ...@@; this
  a: [1]

o.f(...o.a).f(...o.a)
eq '1,1,1,1' o.a + ''

(-> o.f(...).f(...))call o, 2
eq '1,1,1,1,2,2' o.a + ''


# [coffee#870](https://github.com/jashkenas/coffee-script/issues/870)
[...[], a] = [1]
eq a, 1

# `...` is same as `...[]`
[..., a] = [1 to 3]
eq a, 3

[a, ..., b] = [1 2]
eq a, 1
eq b, 2

[a, ..., b] = [1 to 5]
eq a, 1
eq b, 5

